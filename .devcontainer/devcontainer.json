{
  "name": "Ubuntu 22.04",

  "image": "mcr.microsoft.com/vscode/devcontainers/cpp:ubuntu-22.04",

  "runArgs": ["--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined"],

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "ms-azuretools.vscode-docker"
      ]
    }
  },

  "remoteUser": "vscode",
  "features": {
    "./features/dev": {},
    "docker-in-docker": "latest",
    "github-cli": "latest",
    "node": "latest"
  }
}
