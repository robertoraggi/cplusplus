{
  "name": "cxx-frontend",
  "version": "1.1.24",
  "description": "A compiler front end for the C++ language",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "npm run build:wasm && npm run copy:wasm && npm run build:ts",
    "build:ts": "tsc",
    "watch:ts": "tsc --watch",
    "prepack": "npm run copy:readme",
    "build:wasm": "../../scripts/build-emscripten.sh",
    "copy:wasm": "copyfiles -V -f ../../build.em/src/js/cxx-js.* dist",
    "copy:readme": "copyfiles -V -f ../../README.md ../../CHANGELOG.md .",
    "prettier": "npx prettier --check .",
    "prettier:fix": "npx prettier --write . "
  },
  "keywords": [
    "c++",
    "compiler",
    "lexer",
    "parser",
    "preprocessor",
    "syntax"
  ],
  "author": {
    "name": "Roberto Raggi",
    "email": "roberto.raggi@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/robertoraggi/cplusplus"
  },
  "bugs": {
    "url": "https://github.com/robertoraggi/cplusplus/issues"
  },
  "devDependencies": {
    "@types/node": "^20.2.1",
    "copyfiles": "^2.4.1",
    "prettier": "^3.0.3",
    "typescript": "^5.0.4"
  }
}
