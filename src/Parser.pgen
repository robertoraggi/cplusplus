template_argument(ParseContext::ExprAttrs& yyast)
{
  TypeIdAST* t{nullptr};
  ParseContext::ExprAttrs e{nullptr};
}
: (type_id(t) / (comma | greater | dot_dot_dot)) dot_dot_dot? { yyast = t; }
| template_argument_expression(e) dot_dot_dot? { yyast = e; }
