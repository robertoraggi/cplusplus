      }
    )*
    rbrace
      {
        auto ast = new (pool) CompoundStatementAST;
        ast->statement_list = statement_list;
        yyast = ast;
      })
    | { unit->fatal(start, "internal compiler error, failed to parse the compound statement"); })
;

